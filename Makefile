# Check Python version
python --version
# or
python3 --version

# Create a virtual environment
python -m venv venv
# or
python3 -m venv venv

# Activate the virtual environment (Windows)
venv\Scripts\activate
# For Mac/Linux
source venv/bin/activate

# Install a package (example: Flask)
pip install Flask

# Deactivate the virtual environment
deactivate
